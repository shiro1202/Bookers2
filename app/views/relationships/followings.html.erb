<div class="container px-5 px-sm-0">
  <div class="row">
    <div class= "col-md-8 offset-md-1">
      <h2>Follow Users</h2>
      <table class='table'>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <% @users.each do |user| %>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
            </td>
            <td><%= user.name %><td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>