<div class="box">
  <div class="col-md-3">

    <h1>User info</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.introduction %>
    <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    
    <h1>New book</h1>
      <%= form_with model: @book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_field :body %>
      <nav>
      <%= f.submit 'Create Book' %>
      </nav>
    <% end %>
  </div>
</div>
<div class= "col-xs-9">
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <%= link_to user_path(@user.id) do %>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
        <% end %>
        <td><%=link_to book.title, book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
</div>
