<div class="container px-5 px-sm-0">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <%= render 'layouts/sidebar', user: @user, book_new: @book %>
    <div class= "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class='table'>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
            </td>
            <td><%= user.name %><td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <% if current_user.following?(user) %>
              <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %></td>
            <% else %>
              <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
            <% end %>
            <td><%= link_to "Show", user_path(user.id) %></td>

          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>