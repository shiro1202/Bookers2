<div class="container px-5 px-sm-0">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-xs-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
      <h5>name</h5>
      <%= @user.name %>
      <h5>introduction</h5>
      <%= @user.introduction %>
      <%= link_to "",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

      <h1>New book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
      <% end %>
    </div>
    <div class= "col-xs-9 offset-md-1">
      <h2>Users</h2>
      <table class='table'>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
            </td>
            <th><%= user.name %><th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>