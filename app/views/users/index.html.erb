<div class="container px-5 px-sm-0">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <%= render 'layouts/sidebar', user: @user, book_new: @book_new %>
    <div class= "col-xs-8 offset-md-1">
      <h2>Users</h2>
      <table class='table'>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
            </td>
            <th><%= user.name %><th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>