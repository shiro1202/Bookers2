<div class="col-md-3">
  <h1>User info</h1>
  <table class = "table">
    <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %></tr>
    <tr>
	    <th>name</th>
	    <th><%= user.name %></th>
    </tr>
    <tr>
	    <th>introduction</th>
	    <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= user.followings.count %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= user.followers.count %></th>
    </tr>
  </table>
  <div class = "row">
    <% unless user == current_user %>
      <% if current_user.following?(user) %>
        <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %></td>
      <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %></td>
      <% end %>
    <% end %>
    <%= link_to "",edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

  </div>



  <h1>New book</h1>
  <%= form_with model: book_new, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
  <% end %>
</div>