<div class="box">
  <div class="col-md-3">
    
    <h1>User info</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.introduction %>
    <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    
    <h1>New book</h1>
      <%= form_with model: @book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_field :body %>
      <nav>
      <%= f.submit 'Create Book' %>
      </nav>
    <% end %>
  </div>
</div>
<div class= "col-xs-9">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id = current_user.id %>
    <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
    </table>
  </div>