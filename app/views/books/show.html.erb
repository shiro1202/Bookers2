<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
      <h5>name</h5>
      <%= @user.name %>
      <h5>introduction</h5>
      <%= @user.introduction %>
      <%= link_to "",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

      <h1>New book</h1>
      <%= form_with model: @book_new, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
      <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %>
              <nav>
                <%= @book.user.name %>
              </nav>
            <% end %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "Are you sure?"} %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>