<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件の error が発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-xs-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
      <h5>name</h5>
      <%= @user.name %>
      <h5>introduction</h5>
      <%= @user.introduction %>
      <%= link_to "",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

      <h1>New book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
      <% end %>
    </div>
    <div class= "col-xs-9 offset-md-1">
      <h2>Books</h2>
      <table class='table'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= link_to book.body %></td>
            <% if book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(book), method: :delete do %>
                ♥<%= book.favorites.count %>
              <% end %>
            </td>
            <% else%>
            <td>
              <%= link_to book_favorites_path(book), method: :post do %>
                ♡<%= book.favorites.count %>
              <% end %>
            </td>
          <% end %>
            <td>コメント数：<%= book.book_comments.count %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>