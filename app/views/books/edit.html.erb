<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件の error が発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book', class:"btn btn-primary" %>
<% end %>

<%= link_to 'Show', book_path(@book) %>
